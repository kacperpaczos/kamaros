{
    "name": "kamaros-ts",
    "version": "0.1.0",
    "description": "TypeScript/JavaScript library for Kamaros JCF Format - intelligent ZIP with Time-Travel versioning",
    "type": "module",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist",
        "wasm"
    ],
    "scripts": {
        "build": "npm run build:wasm && npm run build:ts",
        "build:wasm": "cd ../wasm && wasm-pack build --target web --out-dir pkg",
        "build:ts": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --platform=neutral --external:fs --external:path && esbuild src/index.ts --bundle --outfile=dist/index.cjs --format=cjs --platform=node && tsc --emitDeclarationOnly",
        "typecheck": "tsc --noEmit",
        "test": "vitest",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "kamaros",
        "jcf",
        "versioning",
        "time-travel",
        "zip",
        "wasm",
        "file-format"
    ],
    "author": "",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/kacperpaczos/kamaros.git"
    },
    "dependencies": {
        "fflate": "^0.8.2"
    },
    "devDependencies": {
        "@types/node": "^25.0.9",
        "esbuild": "^0.20.0",
        "typescript": "^5.3.0",
        "vitest": "^1.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
